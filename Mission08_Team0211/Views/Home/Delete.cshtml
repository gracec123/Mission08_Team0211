@*
    This page displays a confirmation message for deleting a task.
*@
@{
}

@model AllTasks

<h2>Confirm Deletion</h2>
<h3>@Model.Name</h3>

<form method="post">

    <input type="hidden" asp-for="TaskId" />

    <button type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="Index">Cancel</a>
</form>