@*
    This page displays tasks grouped by urgency and importance quadrants.
*@
@{
    ViewData["Title"] = "Home Page";
}

@model List<AllTasks>

<br />

<div class="container">

    <div class="row">
        <div class="col-1"></div>
        <div class="col"><h3>Urgent</h3></div>
        <div class="col"><h3>Not Urgent</h3></div>
    </div>

    <br />

    <div class="row">
        <div class="col-1">
            <h3 style="writing-mode: vertical-rl; transform: rotate(180deg);">
                Important
            </h3>
        </div>
        <div class="col">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Due Date</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                @foreach (var task in Model)
                {
                    @if (task.Quadrant == 1) 
                    {
                        <tbody>
                            <tr>
                                <td>@task.Name</td>
                                <td>@task.DueDate</td>
                                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a></td>
                                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a></td>
                            </tr>
                        </tbody>
                    }
                }
            </table>
        </div>
        <div class="col">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Due Date</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
